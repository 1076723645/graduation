<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/normal_toolbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/Background"
            android:orientation="vertical">
            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/index_bg_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="天气预警提醒"
                android:textSize="11sp"
                android:textColor="@color/reg_choose_color"
                android:layout_marginLeft="24dp"
                tools:ignore="SmallSp" />
            <View
                android:id="@+id/v2"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/line_color"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="16dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/v3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/index_bg_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="更新设置"
                android:textSize="11sp"
                android:textColor="@color/reg_choose_color"
                android:layout_marginLeft="24dp"
                tools:ignore="SmallSp" />
            <View
                android:id="@+id/v4"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/line_color"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"/>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:text="夜间自动更新"
                    android:textColor="?attr/TextColor"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="关闭后，23:00-次日07:00将不会自动联网更新天气"
                    android:textColor="@color/color_66"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView5"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <com.suke.widget.SwitchButton
                    android:id="@+id/sb_update_weather"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:sb_show_indicator="false"
                    app:sb_border_width="0.5dp"/>
            </android.support.constraint.ConstraintLayout>
            <View
                android:id="@+id/v5"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/index_bg_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="提醒设置"
                android:textSize="11sp"
                android:textColor="@color/reg_choose_color"
                android:layout_marginLeft="24dp"
                tools:ignore="SmallSp" />
            <View
                android:id="@+id/v6"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/line_color"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="16dp"/>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:text="天气变化提醒"
                    android:textColor="?attr/TextColor"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="所在地，天气变化较大时，及时推送提醒通知"
                    android:textColor="@color/color_66"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tt"
                    app:layout_constraintTop_toBottomOf="@+id/tt" />

                <com.suke.widget.SwitchButton
                    android:id="@+id/sb_change_remind"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:sb_show_indicator="false"
                    app:sb_border_width="0.5dp"/>
            </android.support.constraint.ConstraintLayout>
            <View
                android:id="@+id/v7"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/line_color"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="16dp"/>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:text="夜间免打扰"
                    android:textColor="?attr/TextColor"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="开启后，将自动屏蔽23:00-次日07:00的提醒通知"
                    android:textColor="@color/color_66"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/t"
                    app:layout_constraintTop_toBottomOf="@+id/t" />

                <com.suke.widget.SwitchButton
                    android:id="@+id/sb_no_disturb"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:sb_show_indicator="false"
                    app:sb_border_width="0.5dp"/>
            </android.support.constraint.ConstraintLayout>
            <View
                android:id="@+id/v8"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/index_bg_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="其他设置"
                android:textSize="11sp"
                android:textColor="@color/reg_choose_color"
                android:layout_marginLeft="24dp"
                tools:ignore="SmallSp" />
            <View
                android:id="@+id/v9"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/line_color"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_night"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="夜间模式"
                    android:textSize="15sp"
                    android:textColor="?attr/TextColor"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="1"/>
                <com.suke.widget.SwitchButton
                    android:id="@+id/sb_night"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    app:sb_show_indicator="false"
                    app:sb_border_width="0.5dp"/>
            </LinearLayout>
            <View
                android:id="@+id/v10"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/index_bg_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="关于"
                android:textSize="11sp"
                android:textColor="@color/reg_choose_color"
                android:layout_marginLeft="24dp"
                tools:ignore="SmallSp" />
            <View
                android:id="@+id/v11"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/line_color"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="版本号"
                    android:textColor="?attr/TextColor"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:textSize="13sp"
                    android:text="1.0.0"/>
            </LinearLayout>
            <View
                android:id="@+id/v12"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/line_color"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="数据来源"
                    android:textColor="?attr/TextColor"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:text="和风天气"
                    android:textSize="13sp" />
            </LinearLayout>
            <View
                android:id="@+id/v13"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/line_color"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="定位"
                    android:textColor="?attr/TextColor"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:text="百度地图定位服务"
                    android:textSize="13sp" />
            </LinearLayout>
            <View
                android:id="@+id/v14"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/line_color"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="素材来源"
                    android:textColor="?attr/TextColor"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:text="网络"
                    android:textSize="13sp" />
            </LinearLayout>
            <View
                android:id="@+id/v15"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@color/line_color"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="16dp"/>
            <LinearLayout
                android:id="@+id/ll_clean"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="清除缓存"
                    android:textColor="?attr/TextColor"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>

